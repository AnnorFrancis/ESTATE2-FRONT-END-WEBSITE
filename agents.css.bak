/* Cleaned and focused agents.css */
:root {
  --brand: #2563eb;
  --brand-2: #1d4ed8;
  --muted: #64748b;
  --shadow: 0 10px 30px rgba(2, 8, 23, 0.08);
  --bg: #f6f8fb;
  --card: #fff;
}
* {
  box-sizing: border-box;
}
html,
body {
  margin: 0;
  padding: 0;
  font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, Arial,
    sans-serif;
  background: var(--bg);
  color: #0f172a;
}
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Navbar / hero reuse */
.nav {
  background: #fff;
  border-bottom: 1px solid #e5e7eb;
}
.nav .inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70px;
}
.badge {
  background: var(--brand);
  color: #fff;
  padding: 8px 12px;
  border-radius: 10px;
  font-weight: 700;
}
.hero {
  background-image: linear-gradient(
      rgba(37, 99, 235, 0.45),
      rgba(29, 78, 216, 0.35)
    ),
    url("https://images.unsplash.com/photo-1565182999561-1b4f5d1c5a1e?auto=format&fit=crop&w=1400&q=60");
  background-size: cover;
  background-position: center;
  padding: 70px 0;
  border-radius: 12px;
  color: #fff;
  box-shadow: var(--shadow);
  margin-bottom: 30px;
}
.hero .content {
  text-align: center;
}
.hero h1 {
  font-size: 40px;
  margin: 0;
}

/* Search / filters */
.search-row {
  display: flex;
  gap: 12px;
  margin-bottom: 20px;
  align-items: center;
}
.search-row input,
.search-row select {
  padding: 10px 12px;
  border-radius: 10px;
  border: 1px solid #e5e7eb;
  background: #fff;
  min-width: 0;
}
.search-row .btn {
  white-space: nowrap;
}
@media (max-width: 700px) {
  .search-row {
    flex-direction: column;
    align-items: stretch;
  }
}

/* Agent cards */
.cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 1.25rem;
}
.card {
  background: var(--card);
  border-radius: 12px;
  box-shadow: 0 8px 22px rgba(2, 8, 23, 0.06);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.card img {
  width: 100%;
  height: 240px;
  object-fit: cover;
}
.card .body {
  padding: 16px;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.card strong {
  font-size: 18px;
  display: block;
  margin-bottom: 6px;
}
.meta {
  color: var(--muted);
  font-size: 14px;
  display: flex;
  gap: 8px;
  justify-content: center;
}
.badges {
  display: flex;
  gap: 8px;
  justify-content: center;
  margin-top: 8px;
}
.pill {
  background: #eef2ff;
  color: var(--brand);
  padding: 6px 10px;
  border-radius: 999px;
  font-weight: 700;
}
.agent-actions {
  display: flex;
  gap: 10px;
  justify-content: center;
  margin-top: 14px;
}
.btn,
.contact-btn {
  background: var(--brand);
  color: #fff;
  border: none;
  padding: 10px 14px;
  border-radius: 10px;
  cursor: pointer;
}
.contact-btn.secondary {
  background: #fff;
  color: var(--brand);
  border: 1px solid #e5e7eb;
}
.btn:hover,
.contact-btn:hover {
  transform: translateY(-2px);
}

/* Modal */
.agent-modal {
  position: fixed;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.45);
  opacity: 0;
  pointer-events: none;
  z-index: 1200;
  transition: opacity 0.18s;
}
.agent-modal.active {
  opacity: 1;
  pointer-events: auto;
}
.agent-modal .modal-content {
  background: #fff;
  border-radius: 12px;
  padding: 20px;
  max-width: 520px;
  width: 94%;
  box-shadow: 0 12px 40px rgba(2, 8, 23, 0.14);
  position: relative;
}
.agent-modal .close {
  position: absolute;
  right: 12px;
  top: 8px;
  background: none;
  border: none;
  font-size: 22px;
  cursor: pointer;
}
.agent-modal h3 {
  margin: 0 0 6px;
}
.agent-modal p {
  margin: 0 0 12px;
  color: var(--muted);
}
.agent-modal form input,
.agent-modal form textarea {
  width: 100%;
  padding: 10px;
  border-radius: 8px;
  border: 1px solid #e5e7eb;
  margin-top: 8px;
}
.agent-modal .actions {
  display: flex;
  gap: 8px;
  justify-content: flex-end;
  margin-top: 12px;
}

/* small responsive tweaks */
@media (max-width: 520px) {
  .card img {
    height: 180px;
  }
  .hero h1 {
    font-size: 28px;
  }
}

/* Light utility */
.hidden {
  display: none !important;
}
